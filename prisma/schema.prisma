  id              Int       @id @default(autoincrement())
  userName        String    @unique
  flagScore       Int       @default(0)
  capitalScore    Int       @default(0)
  email           String    @unique 
  password        String 
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  profilePicture  String
}
